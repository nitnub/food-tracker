@model FoodVM

<!-- Delete Confirmation Modal (Food) -->
<div id="dvModal" class="modal delete-food-modal fade" role="dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

<div>

    <div class="form-floating py-2 col-4">
        <input id="foodSearchInput" class="form-control food-input shadow" placeholder="Filter Foods" />
        <label class="ms-2" for="foodSearchInput">Filter Foods</label>
    </div>

    <div id="foodChipContainer">

        @foreach (var food in Model.FoodList)
        {
            <partial name="_FoodChipPartial" model="food" />
        }
    </div>
        <div class="card-body p-4">
        <div id="foodMainView">
            <partial name="_AddFoodPartial" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        <script>
            var foodList = @Json.Serialize(Model.FoodList);
            var fodMapList = @Json.Serialize(Model.FodmapList);
        </script>
        <script src="~/js/addFood.js"></script>
        <script src="~/js/fodmap.js"></script>
        <script src="~/js/food.js"></script>
        <partial name="_ValidationScriptsPartial" />
    }
}